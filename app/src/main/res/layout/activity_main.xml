<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:orientation="vertical">

    <TextView
        android:textAlignment="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Hello World!" />
    <TextView
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:text="center"
        android:textAlignment="center"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center">
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Hallo"
            android:id="@+id/btn_hallo"
            android:padding="30dp"/>
        <Button
            android:background="@drawable/selector_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Hallo 2"
            android:id="@+id/btn_hallo2"
            android:layout_margin="10dp"/>
    </LinearLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <Button
            android:id="@+id/btn_r1"
            style="@style/Buttton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="10dp"
            android:layout_marginBottom="10dp"
            android:text="@string/app_name" />
        <Button
            style="@style/Buttton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Button r2"
            android:id="@+id/btn_r2"
            android:layout_toRightOf="@+id/btn_r1"/>

        <Button
            android:id="@+id/btn_r3"
            style="@style/Buttton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/btn_r1"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="10dp"
            android:layout_marginBottom="10dp"
            android:layout_toLeftOf="@id/btn_r2"
            android:text="Button r3" />
    </RelativeLayout>


</LinearLayout>